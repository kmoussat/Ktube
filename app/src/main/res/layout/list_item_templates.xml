<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="14dp"

        android:id="@+id/videoImage"
        android:paddingBottom="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Titre"
        android:textSize="18sp"
        android:id="@+id/videotitle"
        android:paddingLeft="4dp"
        android:paddingRight="5dp"
        android:layout_alignTop="@+id/videoImage"
        android:layout_toRightOf="@+id/videoImage"
        android:layout_toEndOf="@+id/videoImage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Description"
        android:lines="1"
        android:ellipsize="end"
        android:paddingLeft="4dp"
        android:paddingRight="5dp"
        android:textSize="12sp"
        android:id="@+id/videodesc"
        android:layout_below="@+id/videotitle"
        android:layout_alignLeft="@+id/videotitle"
        android:layout_alignStart="@+id/videotitle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"
        android:text="Channel"
        android:id="@+id/videochannel"
        android:paddingLeft="4dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:textSize="12sp"
        android:layout_below="@+id/videodesc"
        android:layout_alignLeft="@+id/videodesc"
        android:layout_alignStart="@+id/videodesc" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/videoImage"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/videoImage"
        android:layout_alignTop="@+id/videoImage"
        android:onClick="MainActivity.buttonClickFunction()"
        android:visibility="invisible"
        app:srcCompat="@android:color/transparent" />

    <TextView
        android:id="@+id/videoid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/videotitle"
        android:layout_marginEnd="81dp"
        android:text="TextView"
        android:visibility="invisible" />

</RelativeLayout>